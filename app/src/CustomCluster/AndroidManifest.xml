<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application>
        <activity
            android:name="com.mapbox.dash.showcase.app.ShowcaseClusterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.car.cluster.NAVIGATION" />
            </intent-filter>

            <meta-data
                android:name="distractionOptimized"
                android:value="true" />
        </activity>

        <!--    This is unnecessary if cluster module is not added to the project    -->
        <activity
            android:name="com.mapbox.dash.cluster.ClusterActivity"
            tools:node="remove" />
    </application>
</manifest>
