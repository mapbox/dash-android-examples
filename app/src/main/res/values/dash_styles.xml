<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDashTheme.Day" parent="DashTheme.Day">
        <item name="text_color_accent">@color/accent</item>
        <item name="text_color_links">@color/accent</item>
        <item name="button_color_primary">@color/accent</item>
        <item name="border_color_accent">@color/accent</item>
        <item name="icon_color_accent">@color/accent</item>
        <item name="guidance_color_primary">@color/accent</item>

        <!--Defines intensity of the light emitted by border when the range map is in normal state-->
        <item name="ev_range_map_flood_light_intensity_normal">0.37</item>
        <!--Defines color of the light emitted by border when the range map is in normal state-->
        <item name="ev_range_map_flood_light_color_normal">#3700B3</item>
        <!--Determines color of reachable area when the range map is in normal state-->
        <item name="ev_range_map_fill_color_normal">@android:color/transparent</item>
        <!--Determines color of the border around reachable area when the range map is in normal state-->
        <item name="ev_range_map_border_color_normal">#CC3700B3</item>
        <!--Defines intensity of the light emitted by border when the range map is in warning state-->
        <item name="ev_range_map_flood_light_intensity_warning">0.19</item>
        <!--Defines color of the light emitted by border when the range map is in warning state-->
        <item name="ev_range_map_flood_light_color_warning">#BB86FC</item>
        <!--Determines color of reachable area when the range map is in warning state-->
        <item name="ev_range_map_fill_color_warning">@android:color/transparent</item>
        <!--Determines color of the border around reachable area when the range map is in warning state-->
        <item name="ev_range_map_border_color_warning">#80BB86FC</item>
    </style>

    <style name="MyDashTheme.Night" parent="DashTheme.Night">
        <item name="text_color_accent">@color/accent</item>
        <item name="text_color_links">@color/accent</item>
        <item name="button_color_primary">@color/accent</item>
        <item name="border_color_accent">@color/accent</item>
        <item name="icon_color_accent">@color/accent</item>
        <item name="guidance_color_primary">@color/accent</item>
    </style>

</resources>